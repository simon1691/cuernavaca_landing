---
const { content } = Astro.props;
---

<section id="historia" class="bg-black py-8 md:py-15 px-10 scroll-mt-15">
  <div
    class="sm:w-full xl:max-w-[1180px] mx-auto flex flex-col xl:flex-row justify-center items-center gap-8 md:gap-[117px]"
  >
    <img
      class="w-[483px] h-auto"
      src={`${import.meta.env.BASE_URL}historia_cuernavaca.png`}
      alt=""
    />
    <article class="text-[#EAEAFD] flex flex-col gap-10">
      <h1
        class="text-2xl md:text-5xl font-bold font-sans"
        set:html={content.title}
      />
      <p class="text-md md:text-2xl font-normal p-0 md:pe-30">
        {content.paragraph}
      </p>
    </article>
  </div>
</section>
