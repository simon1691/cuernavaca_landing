---
import Button from "./Button.astro";
import MainTitle from "./Logos/MainTitle.astro";

const { content } = Astro.props;
---

<header
  id="header"
  class="relative flex flex-col items-center justify-end w-auto h-[530px] md:h-screen text-center overflow-hidden pb-15"
>
  <div class="block md:hidden h-[96px]"></div>
  <!-- ðŸŽ¥ Background video -->

  <!-- ðŸ”³ Top gradient overlay -->
  <div
    class="absolute top-[0px] md:top-0 left-0 w-full h-[90px] md:h-[250px] bg-gradient-to-b from-black via-black/60 via-70% to-transparent z-10"
  >
  </div>

  <video
    autoplay
    muted
    loop
    playsinline
    preload="metadata"
    poster="/headerBg.png"
    class="absolute top-[-20px] md:top[-90px] left-0 w-auto md:w-full h-[465px] md:h-full object-cover"
  >
    <source src="/Cuernavaca_video.mp4" type="video/mp4" />
  </video>

  <!-- ðŸ§¾ Content -->
  <div class="relative z-20 px-10 md:px-6 text-white max-w-[950px]">
    <p class="mb-10 mt-12 text-md md:text-xl font-sans">
      {content.subtitle}
    </p>
    <Button buttonText={content.button} />
  </div>

  <!-- ðŸ”³ Bottom gradient -->
  <div
    class="absolute bottom-0 left-0 w-full h-[250px] md:h-[450px] bg-gradient-to-t from-black via-black/90 via-40% to-transparent z-10"
  >
  </div>
</header>
