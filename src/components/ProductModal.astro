---
import Logo from "./Logos/Logo.astro";
const { content } = Astro.props;
---

<style>
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }
  .modal {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    max-width: 500px;
    width: 100%;
  }
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #54545e;
    border-radius: 9999px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>

<div class="fixed inset-0 flex items-center justify-center z-50 bg-black/90">
  <div
    class="relative max-w-[80vw] md:max-w-[650px] xl:max-w-[930px] h-[90vh] flex flex-col md:flex-row items-stretch bg-[#18181B] border border-[#54545e] rounded-3xl overflow-hidden"
  >
    <!-- BotÃ³n de cerrar -->
    <button
      id="close-modal"
      class="absolute right-8 top-8 w-[38px] h-[38px] flex items-center justify-center rounded-full border-2 border-white text-white hover:bg-white/10 transition cursor-pointer z-10"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Wrapper que scrollea -->
    <div class="w-full h-full overflow-y-auto rounded-3xl">
      <div class="flex flex-col md:flex-row h-full">
        <!-- Imagen -->
        <div
          class="w-full h-[450px] md:h-auto md:w-[45%] pt-10 pb-5 md:py-10 bg-black relative"
        >
          <div class="absolute top-8 left-8">
            <Logo />
          </div>
          <img
            id="productImage"
            class="h-full w-auto md:w-auto md:h-full mx-auto md:mx-0 object-cover object-[center_-20px]"
          />
        </div>

        <!-- Contenido -->
        <div
          class="w-full md:w-[55%] flex flex-col justify-between gap-4 py-10 md:py-24 px-10 text-[#EAEAFD]"
        >
          <h1 id="title" class="text-3xl font-bold"></h1>
          <p id="description" class="text-sm whitespace-pre-line"></p>
          <div class="flex flex-col gap-4 text-[#EAEAFD]">
            <div class="flex flex-col gap-1">
              <p class="font-bold" id="productTitle"></p>
              <hr />
              <p id="product"></p>
            </div>
            <div class="flex flex-col gap-1">
              <p class="font-bold" id="volumeTitle"></p>
              <hr />
              <p id="volumen"></p>
            </div>
            <div class="flex flex-col gap-1">
              <p class="font-bold" id="alcoholTitle"></p>
              <hr />
              <p id="alcohol"></p>
            </div>
            <div class="flex flex-col gap-1">
              <p class="font-bold" id="presentationTitle"></p>
              <hr />
              <p id="presentation"></p>
            </div>
          </div>

          <a
            class="flex justify-between items-center px-6 py-4 rounded-lg gap-2 bg-[#FFD015] max-w-fit hover:bg-[#e6b800]"
            href="https://www.google.com/"
            target="_blank"
          >
            <span class="text-black">{content.buttonWhereToBuy}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelector("#close-modal")?.addEventListener("click", () => {
    document.getElementById("astro-modal")?.remove();
  });
</script>
