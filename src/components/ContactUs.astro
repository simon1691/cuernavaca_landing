---
import ArrowIcon from "./Iconos/ArrowIcon.astro";
import Mail from "./Iconos/Mail.astro";
import Phone from "./Iconos/Phone.astro";
import Location from "./Iconos/Location.astro";
import LogoAndTextEs from "./Logos/LogoAndTextEs.astro";
import LogoAndTextEng from "./Logos/LogoAndTextEng.astro";

const { content, lang } = Astro.props;
---

<section class="bg-black py-8 md:py-15 px-10">
  <h1
    class="mx-auto text-2xl md:text-5xl font-bold text-center text-[#EAEAFD] max-w-[850px] font-sans leading-tight"
  >
    {content.title}
  </h1>
  <div
    class="flex flex-col md:flex-row xl:justify-start items-center bg-[#323238] px-8 py-10 md:p-16 gap-10 rounded-[22px] md:rounded-[48px] xl:max-w-[1024px] w-full mx-auto mt-15"
  >
    <div
      class="md:w-[482px] w-full flex flex-col items-center md:items-start gap-12 text-[#EAEAFD]"
    >
      <p class="text-md md:text-xl">
        {content.paragraph}
      </p>
      <a
        class="flex justify-between items-center px-6 py-4 rounded-lg gap-2 bg-[#FFD015] max-w-fit hover:bg-[#e6b800]"
        href="https://wa.me/525532300073"
        target="_blank"
      >
        <div>
          <ArrowIcon />
        </div>
        <span class="text-black">{content.buttonRitual}</span>
      </a>
    </div>
    <div class="flex flex-col gap-8">
      {
        content.info.map((info) => {
          return (
            <div class="flex justify-start items-start gap-4">
              <div class="w-8 h-8 flex justify-center items-center">
                {info.id === "mail" ? (
                  <Mail />
                ) : info.id === "phone" ? (
                  <Phone />
                ) : (
                  <Location />
                )}
              </div>
              <div class="text-[#EAEAFD] flex flex-col gap-2">
                <p class="text-sm md:text-lg">{info.title}</p>
                <a
                  class="text-sm text-[#B7B7C7]"
                  target={info.urlMethod.includes("www.") ? "_blank" : ""}
                  href={info.urlMethod + info.text}
                >
                  {info.text}
                </a>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
  <div class="flex justify-center items-center my-15">
    {lang === "es" ? <LogoAndTextEs /> : <LogoAndTextEng />}
  </div>
</section>
